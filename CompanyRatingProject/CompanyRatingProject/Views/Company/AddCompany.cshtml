@model DTO.ModelViewsObjects.CompanyDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Create New Company</h2>
<form asp-action="SaveCompany">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" required="required"/>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" required="required"/>
    </div>
    <div>
        <input type="submit" value="Save"/>
    </div>
</form>